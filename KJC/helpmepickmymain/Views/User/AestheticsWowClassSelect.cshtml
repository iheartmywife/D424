@model helpmepickmymain.Models.ViewModels.User
@{
}


<div class="jumbotron">
    <div class="container text-center">
        <h1>Select Faction!</h1>
        <p>Select all Factions you are deciding between</p>
    </div>
</div>

<form asp-action="AestheticsWowSpecSelect" method="post">
    <div>
        <label>Select Factions:</label>
        <select asp-for="SelectedFactions" class="form-control" multiple="multiple">
            @foreach (var role in Model.PotentialRolesList)
            {
                <option value="@role.Value">@role.Text</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>
