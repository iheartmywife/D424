@model helpmepickmymain.Models.ViewModels.EditRaceRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Race - Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">

    @if (Model == null)
    {
        <p>Model is Null</p>
    }
    else if (Model != null)
    {
        <div class="container py-5">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Id</label>
                    <input type="text" class="form-control" id="id" asp-for="Id" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" asp-for="Name" />
                </div>
                @* <div class="mb-3">
            <label class="form-label">Class</label>
            <select class="form-select" asp-items="@Model.AvailableWowClasses" asp-for="SelectedWowClasses">
            </select>
            </div> *@
            <div class="mb-3">
            <label class="form-label">Faction</label>
            <select class="form-select" asp-items="@Model.AvailableFactions" asp-for="SelectedFaction">
            </select>
            </div>

                <div class="mb-3 d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button type="submit" class="btn btn-danger" asp-area="" asp-controller="AdminRace" asp-action="Delete">Delete</button>
                </div>
            </form>
        </div>
    }
    else
    {
        <p>Races not found</p>
    }
</div>