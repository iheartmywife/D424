@model helpmepickmymain.Models.ViewModels.AddFactionRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Faction - Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">

    @if (Model == null)
    {
        <p>Model is Null</p>
    }
    else if (Model != null)
    {
    <div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Races</label>
                <select class="form-select" asp-items="@Model.AvailableRaces" asp-for="SelectedRaces">
                </select>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </form>
    </div>
    }
    else
    {
        <p>not found</p>
    }
</div>