@model helpmepickmymain.Models.ViewModels.AddSpecRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Spec - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Class</label>
            <select class="form-select" asp-items="@Model.AvailableWowClasses" asp-for="SelectedWowClass">
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Role</label>
            <select class="form-select" asp-items="@Model.AvailableRoles" asp-for="SelectedRole">
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">WoWHead Guide Link</label>
            <input type="text" class="form-control" id="wowheadlink" asp-for="WowheadLink"/>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
