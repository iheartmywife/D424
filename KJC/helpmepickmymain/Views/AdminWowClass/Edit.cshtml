@model helpmepickmymain.Models.ViewModels.EditWowClassRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit WowClass - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    @if (Model == null)
    {
        <p>Model is Null</p>
    }
    else if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Races</label>
                <select class="form-select" size="8" asp-items="@Model.AvailableRaces" asp-for="SelectedRaces">
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Specs</label>
                <select class="form-select" size="8" asp-items="@Model.AvailableSpecs" asp-for="SelectedSpecs">
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Roles</label>
                <select class="form-select" size="8" asp-items="@Model.AvailableRoles" asp-for="SelectedRoles">
                </select>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Submit</button>
                <button type="submit" class="btn btn-danger" asp-area="" asp-controller="AdminWowClass" asp-action="Delete">Delete</button>
            </div>
        </form>
    }
    else
    {
        <p>Factions not found</p>
    }
</div>