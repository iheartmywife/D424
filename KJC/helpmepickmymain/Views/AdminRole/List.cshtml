@model List<helpmepickmymain.Models.Domain.Role>
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Roles - Admin Functionality</h1>
    </div>
</div>

<div class="container" py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>@role.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminRole"
                            asp-action="Edit"
                            asp-route-id="@role.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Roles Found</p>
    }
</div>