<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - helpmepickmymain</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/helpmepickmymain.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">helpmepickmymain</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminFaction" asp-action="Add">Add Faction</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminFaction" asp-action="List">See All Factions</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminRace" asp-action="Add">Add Race</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminRace" asp-action="List">See All Races</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminWowClass" asp-action="Add">Add Class</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminWowClass" asp-action="List">See All Classes</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminSpec" asp-action="Add">Add Spec</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminSpec" asp-action="List">See All Specs</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminRole" asp-action="Add">Add Role</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AdminRole" asp-action="List">See All Roles</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - helpmepickmymain - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
