@model helpmepickmymain.Models.ViewModels.UserPreferences
@{
}


<div class="jumbotron">
    <div class="container text-center">
        <h1>Playstyle Preferences</h1>
        <p>Describe your preference for each item in the textareas below.</p>
        <p>If you have no preference, leave it blank.</p>
    </div>
</div>

<form asp-action="SubmitPreferences" method="post">
    <div class="mb-3">
        <label class="form-label">Utility</label>
        <textarea class="form-control" id="utility" asp-for="UtilityPreference"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Durability</label>
        <textarea class="form-control" id="durability" asp-for="DurabilityPreference"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Rotation Style</label>
        <textarea class="form-control" id="rotationStyle" asp-for="RotationStylePreference"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Class Fantasy</label>
        <textarea class="form-control" id="classFantasy" asp-for="ClassFantasyPreference"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Mobility</label>
        <textarea class="form-control" id="mobility" asp-for="MobilityPreference"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Strength in the Meta</label>
        <textarea class="form-control" id="specStrength" asp-for="SpecStrengthPreference"></textarea>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-dark">Submit</button>
    </div>
</form>

<footer class="container-fluid text-center">
    <p></p>
</footer>