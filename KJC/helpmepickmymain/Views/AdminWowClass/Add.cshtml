@model helpmepickmymain.Models.ViewModels.AddWowClassRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Class - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div><div class="mb-3">
            <label class="form-label">Races</label>
            <select class="form-select" size="8" asp-items="@Model.AvailableRaces" asp-for="SelectedRaces">
            </select>
        </div><div class="mb-3">
            <label class="form-label">Specs</label>
            <select class="form-select" size="8" asp-items="@Model.AvailableSpecs" asp-for="SelectedSpecs">
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Roles</label>
            <select class="form-select" size="8" asp-items="@Model.AvailableRoles" asp-for="SelectedRoles">
            </select>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>